@model IEnumerable<Hotel.Web.Models.RolUsuario.RolUsuarioModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles de Usuarios</h1>

<p>
    <a asp-action="Create">Nuevo Rol de Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdRolUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdRolUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdRolUsuario}) |
                @Html.ActionLink("Details", "Details", new { id=item.IdRolUsuario }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdRolUsuario})
            </td>
        </tr>
}
    </tbody>
</table>
